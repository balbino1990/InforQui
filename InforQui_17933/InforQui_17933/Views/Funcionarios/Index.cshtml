@model PagedList.IPagedList<InforQui_17933.Models.Produtos>
    @using PagedList.Mvc;
    @{
        ViewBag.Title = "Index";
    }

    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Adicionar novo produto", "Adicionar")
    </p>
    <table style="border:2px solid #00ffff;">
        <tr style="border: 2px solid #00ffff;">
            <th  style="border: 2px solid #00ffff;">
                @Html.DisplayName("Nome do Produto")
            </th>
            <th  style="border: 2px solid #00ffff;">
                @Html.DisplayName("Descrição do produto")
            </th>
            <th  style="border: 2px solid #00ffff;">
                @Html.DisplayName("Imagem do produto")
            </th>
            <th  style="border: 2px solid #00ffff;">
                @Html.DisplayName("Preço do produto")
            </th>
            <th  style="border: 2px solid #00ffff;">
                @Html.DisplayName("Tipo do produto")
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="border: 2px solid #00ffff;">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td  style="border: 2px solid #00ffff;">
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td  style="border: 2px solid #00ffff;">
                    <a href='@Url.Action("Detalhes", "Funcionarios", new { id = item.ProdutoID })'>
                        <img src="~/Content/Imagens/@Html.DisplayFor(model =>item.Imagem)" style="height:200px;width:200px;" />
                    </a>
                </td>
                <td  style="border: 2px solid #00ffff;">
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td  style="border: 2px solid #00ffff;">
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
            </tr>
        }

        
        <tr>
            <td>
               @Html.PagedListPager(Model, page => Url.Action("Index", new { pagina = page }))
            </td>
        </tr>
    </table>

    
