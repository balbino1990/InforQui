@model PagedList.IPagedList<InforQui_17933.Models.Produtos>
@using PagedList.Mvc;

@{
    ViewBag.Title = "InforQui";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="navbar-fixed-top navbar navbar-light bg-faded justify-content-between" style="left:47%; top:8.8%; position:fixed;">
    <nav class="navbar-inner" style="background-color:#ffffff;">
        <form class="form-inline">
            <span>
                <img src="~/Content/Imagens/InforQui1.png" width="60" height="50" />
                <input class="form-control mr-sm-2" type="text" placeholder="O que está à procurar?">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </form>
    </nav>
</div>
<br />
<div style="background:white; padding:10px; margin-top:40px; position:center">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active" style="max-height:450px;">
                <img src="~/Content/Imagens/Body.png" style="width:1100px; height:300px;" />             
            </div>
            <div class="item" style="max-height:450px;">
                <img src="~/Content/Imagens/Body2.png" style="width:1100px; height:300px;" />              
            </div>
            <div class="item" style="max-height:450px;">
                <img src="~/Content/Imagens/Body3.png" style="width:1100px; height:300px;" />             
            </div>
            <div class="item" style="max-height:450px;">
                <img src="~/Content/Imagens/Body4.png" style="width:1100px; height:300px;" />             
            </div>
        </div>
    </div>
</div>

<br />
<h4 style="font-size:26px; font-family:Algerian; text-align:center">Bem-vindo ao InforQui</h4>
<hr style="border:4px solid #808080; width:700px;" />
<br />
@foreach (var item in Model)
{
    <div clas="produtoCliente" style="left:20px; cursor:pointer; float:left; padding:2px; margin:5px;">
        @* Vai referenciar para o url com o 'Action', view 'Details' e o controller 'AreaCliente'*@
        <a href='@Url.Action("Detalhes", "Clientes", new { id = item.ProdutoID })'>
            @*Vai mostrar cada url com a imagem dos produtos*@
            <img src="~/Content/Imagens/@Html.DisplayFor(model => item.Imagem)" onmouseover="bigImg(this)" onmouseout="normalImg(this)" style="height:200px;width:150px;" /><br />

            <div style="background-color:#00ff90; color:#ffffff; text-align:center;">
                @Html.DisplayFor(modelItem => item.Preco) <br />
                @Html.DisplayFor(modelItem => item.Nome)
            </div>
        </a>
    </div>
}


@* Paginação dos produtos *@
<div style="top:118%; position:absolute;">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { pagina = page }))

</div>

@* Script para redimensionar imagem no Index Clientes*@
@{
    <script>
        function bigImg(x) {
            x.style.height = "300px";
            x.style.width = "300px";
        }

        function normalImg(x) {
            x.style.height = "200px";
            x.style.width = "200px";
        }
    </script>
}
