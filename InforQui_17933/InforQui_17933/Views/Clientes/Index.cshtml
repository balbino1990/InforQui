@model IEnumerable<InforQui_17933.Models.Produtos>

@{
    ViewBag.Title = "Index do cliente";
}




@using (Html.BeginForm(FormMethod.Get))
{
    <div style="position:fixed; left:20%">
         @Html.TextBox("Procurar")
        <input style="background-color:#00ff90; color:#ffffff; "type="submit" value="Procurar" />
    </div>
}

<br /><br />

<div class="container" style="left:20%; position:absolute">
    <h2>Carousel Example</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Content/Imagens/Body.png" height="200" width="300">

            </div>

            <div class="item">
                <img src="~/Content/Imagens/Body2.png" height="200" width="300">
            </div>

            <div class="item">
                <img src="~/Content/Imagens/Body3.png" height="200" width="300">
            </div>

            <div class="item">
                <img src="~/Content/Imagens/Body4.png" height="200" width="300">
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br /><br />
@foreach (var item in Model)
{
    <div clas="produtoCliente"style="left:20px; cursor:pointer; float:left; padding:2px; margin:5px;">
        @* Vai referenciar para o url com o 'Action', view 'Details' e o controller 'AreaCliente'*@
        <a href='@Url.Action("Detalhes", "Clientes", new { id = item.ProdutoID })'>
        @*Vai mostrar cada url com a imagem dos produtos*@
        <img src="~/Content/Imagens/@Html.DisplayFor(model => item.Imagem)" style="height:200px;width:200px;" /><br />
        
            <div style="background-color:#00ff90; color:#ffffff; text-align:center;">
                @Html.DisplayFor(modelItem => item.Preco) <br />
                @Html.DisplayFor(modelItem => item.Nome)
            </div>
    </a>
    </div>
 }



