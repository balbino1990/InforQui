<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="navbar-fixed-top">
            <table style="left:20%; position:absolute">
                <tr>
                    <td style="border:2px solid #ffffff; padding:4px; background-color:#00ffff">
                        <img src="~/Content/Imagens/Home.png" style="width:50px; height:40px; cursor:pointer">
                        @Html.ActionLink("InforQui", "Index", "Home")
                    </td>

                    <td style="border:2px solid #ffffff; padding:4px; background-color:#00ffff">
                        <img src="~/Content/Imagens/utilizador.png" style="width:50px; height:40px; cursor:pointer">
                        @Html.ActionLink("Utilizador", "Utilizador", "Home")
                    </td>

                    <td style="border:2px solid #ffffff; padding:4px; background-color:#00ffff">
                        <img src="~/Content/Imagens/sobre.png" style="width:50px; height:40px; cursor:pointer">
                        @Html.ActionLink("Sobre", "Sobre", "Home")
                    </td>

                    <td style="border:2px solid #ffffff; padding:4px; background-color:#00ffff">
                        <img src="~/Content/Imagens/contact.png" style="width:50px; height:40px; cursor:pointer">
                        @Html.ActionLink("Contacto", "Contactos", "Home")
                    </td>
                    <td style="border:2px solid #ffffff; padding:4px; background-color:#00ffff">
                        <img src="~/Content/Imagens/compra.png" style="width:50px; height:40px; cursor:pointer">
                        @Html.ActionLink("Funcionarios", "Index", "Funcionarios")
                    </td>
                </tr>
            </table>
        </div>
        <br />

        <!--Adicionar o 'shopping cart' para a loja-->
        <div style="position:fixed; left:70%; color:#00ff90;">
            <img src="~/Content/Imagens/Cesto.png" style="width:50px; height:40px; cursor:pointer">
            @Html.ActionLink("O meu cesto", "Index", "Compra")
        </div>

      @Html.Partial("_LoginPartial")
       
    </div>   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - InforQui coorporation</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
